{
  "name": "painel-obs-futebol",
  "version": "1.0.0",
  "description": "Sistema de overlay para transmissões de futebol compatível com OBS Studio",
  "private": true,
  "dependencies": {
    "axios": "^1.11.0",
    "concurrently": "^9.2.1",
    "json-server": "0.17.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "serve": "^14.2.4",
    "tailwindcss": "^3.2.0"
  },
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "PORT=3002 react-scripts start",
    "server": "json-server --watch db.json --port 3001",
    "server:prod": "json-server --watch db.json --port 3001 --host 0.0.0.0",
    "start:prod": "npm run build && node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy:build": "npm run build",
    "serve": "serve -s build -l 3002"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}